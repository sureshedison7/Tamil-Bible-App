<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting (light mode) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Use drawable-based launch background (flutter_native_splash writes this) -->
        <item name="android:windowBackground">@drawable/launch_background</item>

        <!-- Remove enter/exit animations to avoid flicker between native splash and first Flutter frame -->
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>

        <!-- Disable content transitions (prevent crossfade/glitch) -->
        <item name="android:windowContentTransitions">false</item>

        <!-- Ensure window is opaque (avoid translucent layering) -->
        <item name="android:windowIsTranslucent">false</item>

        <!-- Keep status/navigation bar colors consistent with the splash background -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <!-- Theme applied to the Android Window after the process has started -->
    <!-- Make this match the LaunchTheme background/colors to avoid a visual jump -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Use the same background color as the native splash to avoid a flash -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Match status/navigation bar colors -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- Also disable content transitions here -->
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
</resources>